<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:id="@+id/Bill_image"

    />
    <TextView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/Bill_name"
        android:text="Name"
        android:textSize="12dp"
        android:layout_margin="7dp"
        android:textColor="#000"
        android:gravity="center"
        />
    <TextView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/bill_unitPrice"
        android:text="Unit price"
        android:textSize="12dp"
        android:layout_margin="7dp"
        android:textColor="#000"
        android:gravity="center"

        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
android:src="@drawable/ic_cplus"
        android:id="@+id/rev_minus"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        />
    <TextView
        android:layout_width="14dp"
        android:layout_height="50dp"
        android:id="@+id/Bill_quantity"
        android:text="Qty."
        android:textSize="10dp"
        android:layout_margin="7dp"
        android:textColor="#000"
        android:gravity="center"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_cminus"
        android:id="@+id/rev_plus"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        />
<TextView
    android:layout_width="40dp"
    android:layout_height="50dp"
    android:id="@+id/Bill_total"
    android:text="Total"
    android:textSize="12dp"
    android:layout_margin="7dp"
    android:textColor="#000"
    android:gravity="center"
    />
</LinearLayout>