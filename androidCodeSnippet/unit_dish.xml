<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/dish_image"
        android:layout_margin="10dp"
        android:src="@drawable/ctandoor"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/dish_image"
        android:text="Chicken Tandoori"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/dish_description"

        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/dish_image"
        android:text="Chicken Tandoori"
        android:textSize="14dp"

        android:gravity="left"
        android:textStyle="italic"
        android:textColor="#716d6d"
        android:id="@+id/dish_detail"
        android:layout_below="@+id/dish_description"

        />
    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="4.8"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:drawableRight="@drawable/ic_star"
        android:layout_below="@+id/dish_detail"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/dish_image"
        android:id="@+id/dish_review"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dish_price"
    android:layout_below="@+id/dish_detail"
    android:layout_toRightOf="@+id/dish_review"
    android:layout_margin="7dp"
    android:textSize="13dp"
    android:text="Rs. 120.00/-"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"

        >
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/ic_cplus"
    android:layout_below="@+id/dish_description"
    android:layout_toRightOf="@+id/dish_review"
    android:id="@+id/decrease"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="15dp"
            android:layout_margin="7dp"
            android:textColor="#8e8b8b"
            android:id="@+id/view_count"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cminus"
            android:layout_below="@+id/dish_description"
            android:layout_toRightOf="@+id/dish_review"
            android:id="@+id/increase"
            />
    </LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>